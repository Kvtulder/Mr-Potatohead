<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="nl.kvtulder.mrpotatohead.MainActivity">


    <ImageView
        android:id="@+id/imageBody"
        android:layout_width="wrap_content"
        android:layout_height="432dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/body" />


    <ImageView
        android:id="@+id/imageArms"
        android:layout_width="wrap_content"
        android:layout_height="432dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/imageBody"
        app:layout_constraintTop_toTopOf="@+id/imageBody"
        app:srcCompat="@drawable/arms" />

    <ImageView
        android:id="@+id/imageEars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/imageBody"
        app:layout_constraintTop_toTopOf="@+id/imageBody"
        app:srcCompat="@drawable/ears" />

    <ImageView
        android:id="@+id/imageHat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/imageBody"
        app:layout_constraintTop_toTopOf="@+id/imageBody"
        app:srcCompat="@drawable/hat" />

    <ImageView
        android:id="@+id/imageEyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/imageHat"
        app:layout_constraintTop_toTopOf="@+id/imageHat"
        app:srcCompat="@drawable/eyes" />

    <ImageView
        android:id="@+id/imageEyebrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/imageBody"
        app:layout_constraintTop_toTopOf="@+id/imageBody"
        app:srcCompat="@drawable/eyebrows" />


    <ImageView
        android:id="@+id/imageGlasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/imageBody"
        app:layout_constraintTop_toTopOf="@+id/imageBody"
        app:srcCompat="@drawable/glasses" />


    <ImageView
        android:id="@+id/imageMouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/imageBody"
        app:layout_constraintTop_toTopOf="@+id/imageBody"
        app:srcCompat="@drawable/mouth" />

    <ImageView
        android:id="@+id/imageMustache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/imageBody"
        app:layout_constraintTop_toTopOf="@+id/imageBody"
        app:srcCompat="@drawable/mustache" />


    <ImageView
        android:id="@+id/imageNose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/imageBody"
        app:layout_constraintTop_toTopOf="@+id/imageBody"
        app:srcCompat="@drawable/nose" />


    <ImageView
        android:id="@+id/imageShoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/imageBody"
        app:layout_constraintTop_toTopOf="@+id/imageBody"
        app:srcCompat="@drawable/shoes" />


    <CheckBox
        android:id="@+id/checkNose"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="-25dp"
        android:onClick="checkClicked"
        android:text="Nose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageShoes" />

    <CheckBox
        android:id="@+id/checkHat"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:onClick="checkClicked"
        android:text="Hat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkNose" />

    <CheckBox
        android:id="@+id/checkEars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="checkClicked"
        android:text="Ears"
        app:layout_constraintStart_toStartOf="@+id/checkHat"
        app:layout_constraintTop_toBottomOf="@+id/checkHat" />

    <CheckBox
        android:id="@+id/checkGlasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="checkClicked"
        android:text="Glasses"
        app:layout_constraintStart_toStartOf="@+id/checkEars"
        app:layout_constraintTop_toBottomOf="@+id/checkEars" />

    <CheckBox
        android:id="@+id/checkArms"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:onClick="checkClicked"
        android:text="Arms"
        app:layout_constraintEnd_toEndOf="@+id/checkNose"
        app:layout_constraintTop_toBottomOf="@+id/checkNose" />

    <CheckBox
        android:id="@+id/checkEyes"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:onClick="checkClicked"
        android:text="Eyes"
        app:layout_constraintEnd_toEndOf="@+id/checkArms"
        app:layout_constraintTop_toBottomOf="@+id/checkArms" />

    <CheckBox
        android:id="@+id/checkEyebrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="checkClicked"
        android:text="Eyebrows"
        app:layout_constraintStart_toStartOf="@+id/checkGlasses"
        app:layout_constraintTop_toBottomOf="@+id/checkGlasses" />

    <CheckBox
        android:id="@+id/checkShoes"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:onClick="checkClicked"
        android:text="Shoes"
        app:layout_constraintEnd_toEndOf="@+id/checkEyes"
        app:layout_constraintTop_toBottomOf="@+id/checkEyes" />

    <CheckBox
        android:id="@+id/checkMouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="checkClicked"
        android:text="Mouth"
        app:layout_constraintStart_toStartOf="@+id/checkEyebrows"
        app:layout_constraintTop_toBottomOf="@+id/checkEyebrows" />

    <CheckBox
        android:id="@+id/checkMustache"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:onClick="checkClicked"
        android:text="Mustache"
        app:layout_constraintEnd_toEndOf="@+id/checkShoes"
        app:layout_constraintTop_toBottomOf="@+id/checkShoes" />


</android.support.constraint.ConstraintLayout>
